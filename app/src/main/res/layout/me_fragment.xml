<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_marginTop="60dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
                 android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/opensansbold"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="MY ACCOUNT"/>
        </LinearLayout>
        <LinearLayout

            android:background="@color/buttoncolor"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                    android:src="@drawable/dammy"
                    android:layout_width="100dp"
                    android:layout_height="80dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.5"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="@color/white"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mounika Vallabhani"/>
                    <TextView
                        android:textColor="@color/white"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="mvallabhani7@gmail.com"/>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_border_color_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="3dp"
                    android:layout_height="50dp">
                <LinearLayout
                    android:layout_gravity="center"
                   android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location"/>
                    <TextView
                        android:textSize="13dp"
                        android:fontFamily="@font/opensansregular"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Alwyn Colony ,Miyapur Hyderabad-500049"/>
                    <TextView
                        android:textSize="13dp"
                        android:fontFamily="@font/opensansregular"
                        android:background="@drawable/search_border_shape"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:text="Change"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/myorders"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                    android:fontFamily="@font/opensansregular"
                    android:textSize="18dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/clock"
                    android:layout_marginLeft="10dp"
                    android:text="My Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E6E1E1"/>
            <LinearLayout
                android:id="@+id/notification"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/opensansregular"
                    android:textSize="18dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/notification"
                    android:layout_marginLeft="10dp"
                    android:text="Notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E6E1E1"/>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/logout"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="18dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/logout"
                    android:layout_marginLeft="10dp"
                    android:text="Logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E6E1E1"/>



        </LinearLayout>












    </LinearLayout>



</LinearLayout>