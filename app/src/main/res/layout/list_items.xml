<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    app:cardElevation="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="3dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dammy"/>
            </LinearLayout>
            <LinearLayout

                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_name"
                    android:textColor="#666464"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ladies Finger/Bendakaya"/>
                <LinearLayout
                    android:id="@+id/quntitylayout"
                    android:layout_margin="5dp"
                    android:background="@drawable/spinnershape"
                    android:layout_width="200dp"
                    android:layout_height="40dp">
                    <TextView
                        android:padding="7dp"
                        android:textColor="#666464"
                        android:drawableRight="@drawable/ic_expand_more_black_24dp"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="15dp"
                        android:text="500 gm"
                        android:textColorHint="@color/editextbackground"
                        android:layout_margin="1dp"
                        android:id="@+id/quntity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="#666464"
                                android:fontFamily="@font/opensansregular"
                                android:textSize="13dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MRP : RS"
                                />
                            <TextView
                                android:id="@+id/cancecost"
                                android:textColor="#666464"
                                android:layout_marginLeft="3dp"
                                android:fontFamily="@font/opensansregular"
                                android:textSize="13dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="123"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/black"
                                android:fontFamily="@font/opensansbold"
                                android:textSize="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RS"
                                />
                            <TextView
                                android:id="@+id/product_price"
                                android:textColor="@color/black"
                                android:layout_marginLeft="7dp"
                                android:fontFamily="@font/opensansbold"
                                android:textSize="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                />
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:gravity="center"
                            android:id="@+id/addlayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button

                                android:textSize="10dp"
                                android:fontFamily="@font/opensansregular"
                                android:id="@+id/add"
                                android:layout_margin="5dp"
                                android:textColor="@color/white"
                                android:text="ADD"
                                android:background="@color/buttoncolor"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutincrement"
                            android:visibility="gone"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:background="@color/white"
                                android:layout_width="30dp"
                                android:layout_height="30dp">
                                <TextView
                                    android:id="@+id/decrement"
                                    android:background="@drawable/search_border_shape"
                                    android:gravity="center"
                                    android:textColor="@color/buttoncolor"
                                    android:textSize="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="-"/>

                            </LinearLayout>
                            <TextView
                                android:id="@+id/value"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:textColor="@color/buttoncolor"
                                android:textSize="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="1"/>

                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp">
                                <TextView
                                    android:id="@+id/increment"
                                    android:background="@drawable/search_border_shape"
                                    android:gravity="center"
                                    android:textColor="@color/buttoncolor"
                                    android:textSize="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="+"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>


