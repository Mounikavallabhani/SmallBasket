<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProductDetails">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/opensansregular"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fresh Apple"/>

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="3dp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dammy"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/dammy"/>
            <ImageView
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/dammy"/>
            <ImageView
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/dammy"/>
            <ImageView
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/dammy"/>
            <ImageView
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/dammy"/>
            <ImageView
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/dammy"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:layout_margin="10dp"
                android:id="@+id/rtbProductRating"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:numStars="5"
                android:rating="3.5"
                android:isIndicator="false"
                style="@style/foodRatingBar"/>
            <TextView
                android:fontFamily="@font/opensansregular"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 Reviews"/>
            <TextView
                android:fontFamily="@font/opensansregular"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Wishlist"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="10dp"
                android:background="@drawable/spinnershape"
                android:layout_width="250dp"
                android:layout_height="40dp">
                <Spinner
                    android:textColorHint="@color/editextbackground"
                    android:entries="@array/qundity"
                    android:layout_margin="1dp"
                    android:id="@+id/autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

        </LinearLayout>
            <LinearLayout

                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS"/>
                <TextView
                    android:fontFamily="@font/opensansregular"
                    android:id="@+id/productprice"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75.00"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="200dp"
                android:layout_height="60dp">
            <Button
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/cart"
                android:fontFamily="@font/opensansregular"
                android:id="@+id/addtocart"
                android:background="@color/forbutton"
                android:textColor="@color/white"
                android:text="Add to Cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            </LinearLayout>

    </LinearLayout>

</LinearLayout>
</LinearLayout>