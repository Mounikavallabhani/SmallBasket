<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/heading_main"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!--  <ImageView
              android:id="@+id/cart_main2"
              android:layout_width="41dp"
              android:layout_height="41dp"
              app:srcCompat="@drawable/cart" />-->

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:fontFamily="@font/opensansregular"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/sign_in_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/loginblue"
        android:gravity="center"
        android:text="sign up"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="center_horizontal">

        <EditText
            android:inputType="number"
            android:maxLength="10"
            android:fontFamily="@font/opensansregular"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:id="@+id/forget_mobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/spinnershape"
            android:drawableLeft="@drawable/mail32"
            android:hint="Mobile Number"
            android:drawablePadding="15dp"
            android:padding="10dp" />

<LinearLayout
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


      <!--  <Button
            android:fontFamily="@font/opensansregular"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/registerbackground"
            android:id="@+id/sign_in_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="RESET"
            android:textColor="@color/white" />-->
        <Button

            android:fontFamily="@font/opensansregular"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/buttonbackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="SUBMIT"
            android:id="@+id/forgetpassword"
            android:textColor="@color/white" />
</LinearLayout>




    </LinearLayout>

</LinearLayout>