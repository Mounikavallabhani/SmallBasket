<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    android:layout_margin="4dp"
    android:layout_height="160dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/itemorder_image_name"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:scaleType="center"
                android:layout_height="match_parent"
                android:src="@drawable/add_to_cart"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/itemorder_title_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="FRESHO"
                    android:gravity="left|bottom"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/itemorder_sub_title_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:text="Bottle Gourd"
                    android:gravity="left|center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_ordered_price_kg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1 pc"
                    android:gravity="left|left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_order_price"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:text="RS : 20/-"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="left|top"/>
                <TextView
                     android:id="@+id/item_order_quantity"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="Quantity : 1.05"
                    android:gravity="left|center"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>